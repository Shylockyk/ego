<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">



    <!--给当前Provider自定义一个名称-->
    <dubbo:application name="ego-provider"/>

    <!--<dubbo:config-center address="zookeeper://192.168.56.107:2181"/>-->
    <!--配置注册中心-->
    <dubbo:registry address="zookeeper://192.168.56.103:2181" simplified="true" client="curator"/>


    <!-- 配置调用端口 -->
    <dubbo:protocol name="dubbo" port="20880"/>

    <import resource="classpath:META-INF/spring/applicationContext-mybatis.xml"/>
</beans>